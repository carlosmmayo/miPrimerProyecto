@model miPrimerProyecto.Models.usuariorol

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Detalles de usuario Rol</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Usuario
        </dt>

        <dd>
            @miPrimerProyecto.Controllers.UsuarioRolController.nombreUsuario(Model.idUsuario)
        </dd>

        <dt>
            Rol
        </dt>

        <dd>
            @miPrimerProyecto.Controllers.UsuarioRolController.nombreRol(Model.idRol)
