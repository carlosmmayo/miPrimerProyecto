@model miPrimerProyecto.Models.producto_compra

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Detalles de Producto compra</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Compra
        </dt>

        <dd>
            @miPrimerProyecto.Controllers.productoCompraController.nombreCompra(Model.id_compra)
        </dd>

        <dt>
            Producto
        </dt>

        <dd>
            @miPrimerProyecto.Controllers.productoCompraController.nombreProducto(Model.id_producto)
        </dd>

        <dt>
            Cantidad
        </dt>

        <dd>
            @Html.DisplayFor(model => model.cantidad)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Editar", "Edit", new { id = Model.id }) |
    @Html.ActionLink("Regresar a la Lista", "Index")
</p>
