@model miPrimerProyecto.Models.usuario

@{
    ViewBag.Title = "Details";
}

<h2>Detalles de usuario: @Html.DisplayFor(Model => Model.nombre)</h2>

<div>
    <h4>usuario</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Nombre
        </dt>

        <dd>
            @Html.DisplayFor(model => model.nombre)
        </dd>

        <dt>
            Apellido
        </dt>

        <dd>
            @Html.DisplayFor(model => model.apellido)
        </dd>

        <dt>
            Fecha de nacimiento
        </dt>

        <dd>
            @Html.DisplayFor(model => model.fecha_nacimiento)
        </dd>

        <dt>
            Email
        </dt>

        <dd>
            @Html.DisplayFor(model => model.email)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Editar usuario: " + @Html.DisplayFor(Model => Model.nombre), "Edit", new { id = Model.id }) |
    @Html.ActionLink("Regresar a la Lista", "Index")
</p>
